generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  nickname      String    @unique
  fullName      String?
  bio           String?
  website       String?
  profileImage  String?
  coverImage    String?
  role          Role      @default(USER)
  isBanned      Boolean   @default(false)
  hasBlueTick   Boolean   @default(false)
  hasOrangeTick Boolean   @default(false)
  blueTickUntil DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  posts         Post[]
  likes         Like[]
  comments      Comment[]
  quotes        Quote[]
  bookmarks     Bookmark[]
  followers     Follow[]  @relation("following")
  following     Follow[]  @relation("followers")
}

model Post {
  id            BigInt    @id @default(autoincrement())
  content       String
  mediaUrl      String?
  imageUrl      String?
  linkPreview   Json?
  authorId      String
  parentPostId  BigInt?
  threadRootId  BigInt?
  isAnonymous   Boolean   @default(false)
  author        User      @relation(fields: [authorId], references: [id])
  parentPost    Post?     @relation("PostReplies", fields: [parentPostId], references: [id])
  replies       Post[]    @relation("PostReplies")
  threadRoot    Post?     @relation("ThreadPosts", fields: [threadRootId], references: [id])
  threadPosts   Post[]    @relation("ThreadPosts")
  likes         Like[]

  @@index([parentPostId])
  @@index([threadRootId])
  @@index([authorId, createdAt])
  bookmarks     Bookmark[]
  comments      Comment[]
  quotes        Quote[]
  hashtags      Hashtag[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    BigInt
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}


model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  postId    BigInt
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model Comment {
  id          String   @id @default(cuid())
  content     String
  authorId    String
  postId      BigInt
  isAnonymous Boolean  @default(false)
  author      User     @relation(fields: [authorId], references: [id])
  post        Post     @relation(fields: [postId], references: [id])
  createdAt   DateTime @default(now())
}

model Quote {
  id             String   @id @default(cuid())
  content        String
  authorId       String
  quotedPostId   BigInt
  isAnonymous    Boolean  @default(false)
  author         User     @relation(fields: [authorId], references: [id])
  quotedPost     Post     @relation(fields: [quotedPostId], references: [id])
  createdAt      DateTime @default(now())
}

model Hashtag {
  id        String   @id @default(cuid())
  name      String   @unique
  posts     Post[]
  createdAt DateTime @default(now())
}

model Follow {
  followerId  String
  followingId String
  follower    User     @relation("following", fields: [followerId], references: [id])
  following   User     @relation("followers", fields: [followingId], references: [id])
  createdAt   DateTime @default(now())

  @@id([followerId, followingId])
}

enum Role {
  USER
  MODERATOR
  ADMIN
}
